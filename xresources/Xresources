! Fonts and colors
URxvt*font: xft:Source\ Code\ Pro\ Medium:size=8.5:antialias=true:hinting=true
URxvt*boldFont: xft:Source\ Code\ Pro\ Medium:size=8.5:antialias=true:hinting=true
URxvt*boldItalicFont: xft:Source\ Code\ Pro\ Medium:size=8.5:antialias=true:hinting=true
URxvt*geometry: 150x50
URxvt*iconFile: /usr/share/icons/Vimix/scalable/apps/terminal.svg

! Fonts settings
Xft.dpi: 160
Xft.lcdfilter : lcddefault
Xft.hinting: true
Xft.autohint: true
Xft.antialias: true
Xft.hintstyle: hintslight
Xft.rgba: rgb

! cursor settings
Xcursor.size: 16
Xcursor.theme: Vimix

! Terminal settings
URxvt*termName: rxvt-unicode-256color
URxvt*scrollBar: false
URxvt*urgentOnBell: true
URxvt*depth: 32

! Terminal transparency
URxvt*inheritPixmap: false
URxvt*transparency: true
URxvt*shading: 30

! URxvt*letterSpace: -1
URxvt*pointerColor: #101010
URxvt*pointerColor2: #d1d1d1

! Urxvt libraries
urxvt*perl-lib: /usr/lib/urxvt/perl/
urxvt*perl-ext-common: default,matcher,selection-to-clipboard,font-size

! enabling clickable links
URxvt*url-launcher: /usr/bin/xdg-open
URxvt*matcher.button: 1

URxvt.keysym.C-Up:     font-size:increase
URxvt.keysym.C-Down:   font-size:decrease
URxvt.keysym.C-S-Up:   font-size:incglobal
URxvt.keysym.C-S-Down: font-size:decglobal
URxvt.keysym.C-equal:  font-size:reset
URxvt.keysym.C-slash:  font-size:show

! Disable printing the terminal contents when pressing PrintScreen.
urxvt.print-pipe: "cat > /dev/null"

#include ".xresources/theme"

