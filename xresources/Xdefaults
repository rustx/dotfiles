! Fonts and colors
urxvt*font: xft:Source\ Code\ Pro\ Medium:pixelsize=11:antialias=true:hinting=true
urxvt*boldFont: xft:Source\ Code\ Pro\ Medium:pixelsize=11:antialias=true:hinting=true
urxvt*boldItalicFont: xft:Source\ Code\ Pro\ Medium:pixelsize=11:antialias=true:hinting=true
urxvt*geometry: 150x50

! Fonts settings
xft*dpi: 96
xft*lcdfilter : lcddefault
xft*hinting: true
xft*autohint: true
xft*antialias: true
xft*hintstyle: hintslight
xft*rgba: rgb

! Terminal settings
urxvt*termName: rxvt-unicode-256color
urxvt*scrollBar: false
urxvt*urgentOnBell: true
urxvt*depth: 32

! Terminal transparency
urxvt*inheritPixmap: true
urxvt*shading: 40

urxvt*letterSpace: -1
urxvt*pointerColor: #101010
urxvt*pointerColor2: #d1d1d1

! Urxvt libraries
urxvt*perl-lib: /usr/lib/urxvt/perl/
urxvt*perl-ext-common: default,matcher,selection-to-clipboard

! enabling clickable links
urxvt*url-launcher: /usr/bin/xdg-open
urxvt*matcher.button: 1

! Disable printing the terminal contents when pressing PrintScreen.
urxvt.print-pipe: "cat > /dev/null"

#include ".xresources/theme"

